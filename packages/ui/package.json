{
  "name": "@briks/ui",
  "version": "0.0.1",
  "description": "A style-agnostic but customizable React UI library",
  "author": "Maxime Blanc <max@jellycat.fr>",
  "homepage": "https://github.com/salty-max/briks/blob/main/packages/ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salty-max/briks.git",
    "directory": "/packages/ui"
  },
  "bugs": {
    "url": "https://github.com/salty-max/briks/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "exports": {
    ".": "./dist/index.*.ts",
    "./styles.css": "./dist/index.css",
    "./tailwind.config.js": "./dist/tailwind.config.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint . --ext .tsx,.ts --max-warnings=0",
    "clean": "rimraf .turbo node_modules dist coverage",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@briks/core": "workspace:*",
    "@briks/hooks": "workspace:*",
    "@floating-ui/react-dom": "^2.0.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.360.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "tw-merge": "0.0.1-alpha.3"
  },
  "devDependencies": {
    "eslint-config-briks": "workspace:*",
    "@briks/jest-config": "workspace:*",
    "@briks/typescript-config": "workspace:*",
    "@briks/tailwind-config": "workspace:*",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}