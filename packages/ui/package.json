{
  "name": "@briks/ui",
  "version": "0.1.1",
  "description": "A style-agnostic but customizable React UI library",
  "author": "Maxime Blanc <max@jellycat.fr>",
  "homepage": "https://github.com/salty-max/briks/blob/main/packages/ui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salty-max/briks.git",
    "directory": "/packages/ui"
  },
  "bugs": {
    "url": "https://github.com/salty-max/briks/issues"
  },
  "type": "module",
  "main": "./dist/index.es.js",
  "module": "./dist/index.cjs.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts",
      "umd": "./dist/index.umd.js"
    },
    "./styles": "./dist/index.css",
    "./tailwind": "./dist/tailwind.config.js"
  },
  "scripts": {
    "dev": "vitest",
    "preview": "vite",
    "build": "tsc --p ./tsconfig.build.json && vite build",
    "lint": "eslint . --ext .tsx,.ts --max-warnings=0",
    "clean": "rimraf .turbo node_modules dist coverage",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@briks/core": "workspace:*",
    "@briks/hooks": "workspace:*",
    "@briks/primitives": "workspace:*",
    "@floating-ui/react-dom": "^2.0.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.360.0",
    "react": "^18.2.0",
    "react-day-picker": "^8.10.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.51.1",
    "react-intl": "^6.6.4",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^6.1.1",
    "eslint": "^8.57.0",
    "eslint-config-briks": "workspace:*",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.38",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^5.0.5",
    "rollup-plugin-copy": "^3.5.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-lib-inject-css": "^2.0.1",
    "vitest": "^1.4.0",
    "vitest-axe": "^0.1.0",
    "vitest-canvas-mock": "^0.3.3"
  }
}