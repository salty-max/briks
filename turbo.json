{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        "storybook-static/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "build-storybook": {
      "outputs": [
        "storybook-static/**"
      ],
      "dependsOn": [
        "^build-storybook"
      ]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "chromatic": {
      "dependsOn": [
        "^chromatic"
      ]
    }
  }
}